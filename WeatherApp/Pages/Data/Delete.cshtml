@page
@model WeatherApp.Pages.Data.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPoint.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPoint.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPoint.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPoint.DateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPoint.Temperature)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPoint.Temperature)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPoint.Humidity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPoint.Humidity)
        </dd>
    </dl>

    <div class="delete-box">
        <h3>Are you sure you want to delete this data?</h3>
        <p>
            Changes cannot be undone!
        </p>
        <form method="post">
            <input type="hidden" asp-for="DataPoint.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
    
    <form class="cancel-form" method="post">
        <a class="delete-cancel" asp-page="./Index">Cancel</a>
    </form>
</div>
