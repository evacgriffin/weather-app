@page
@model WeatherApp.Pages.Data.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add New Data</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataPoint.Location" class="control-label"></label>
                <input asp-for="DataPoint.Location" class="form-control" />
                <span asp-validation-for="DataPoint.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPoint.DateTime" class="control-label"></label>
                <input asp-for="DataPoint.DateTime" class="form-control" />
                <span asp-validation-for="DataPoint.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPoint.Temperature" class="control-label"></label>
                <input asp-for="DataPoint.Temperature" class="form-control" />
                <span asp-validation-for="DataPoint.Temperature" class="text-danger"></span>
            </div>
            <div class="form-group bottom-space">
                <label asp-for="DataPoint.Humidity" class="control-label"></label>
                <input asp-for="DataPoint.Humidity" class="form-control" />
                <span asp-validation-for="DataPoint.Humidity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
