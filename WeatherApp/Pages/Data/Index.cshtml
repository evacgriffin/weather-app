@page "/Home"
@model WeatherApp.Pages.Data.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Home</h1>

<div class="how-to">
    <h2>How To</h2>
    <p>
        Welcome to WeatherApp! Below, you can view weather data from different locations. Click <strong>Add New Data</strong> below to add a new data entry to the database. To make changes, you can <strong>Edit</strong> or <strong>Delete</strong> an existing data entry by clicking the corresponding link next to it on the right side in the table.
    </p>
</div>

<p>
    <a asp-page="Create">Add New Data</a>
</p>

<form>
    <p>
        <select asp-for="DataLocation" asp-items="Model.Locations">
            <option value="">All</option>
        </select>
        <label>Location: <input type="text" asp-for="SearchString" /></label>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataPoint[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPoint[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPoint[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPoint[0].Temperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPoint[0].Humidity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DataPoint) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Humidity)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div id="weather-image-container">
    <p>Click the button to load an image.</p>
</div>

<button id="image-btn">Display Image</button>

<input type="hidden" id="antiforgery-token" value="@Model.AntiForgeryToken" />
@section Scripts {
    <script>
        // Event listener for the image button
        document.getElementById("image-btn").addEventListener("click", function () {
            
            // Get anti-forgery token
            const token = document.getElementById("antiforgery-token").value;

            // Send AJAX request
            fetch('@Url.Page("./Index", "FetchImage")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({})
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.text(); // Read server response (image URL) as plain text
                })
                .then(imageUrl => {
                    console.log("Received image URL:", imageUrl);

                    const imageContainer = document.getElementById("weather-image-container");

                    if (imageUrl) {
                        imageContainer.innerHTML = `<img src="${imageUrl}" alt="Server Image"  />`;
                    } else {
                        imageContainer.innerHTML = `<p>Failed to fetch image. Server returned no URL.</p>`;
                    }
                })
                .catch(error => {
                    console.error("Error fetching image:", error);
                    document.getElementById("weather-image-container").innerHTML = `<p>Error occurred. Please try again later.</p>`;
                });
        });
    </script>
}
